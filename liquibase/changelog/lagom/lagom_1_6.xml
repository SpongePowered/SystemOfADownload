<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!--
    Pulled from https://github.com/akka/akka-persistence-jdbc/blob/v2.6.8/src/test/resources/schema/postgres/postgres-schema.sql
    which is the versioned dependency of akka persistence that lagom is using.
     -->
    <changeSet id="lagom-init-1" author="gabizou" onValidationFail="HALT">
        <createTable tableName="journal" schemaName="public">
            <column name="ordering" type="bigserial"/>
            <column name="persistence_id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="sequence_number" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="deleted" type="boolean" defaultValueBoolean="false"/>
            <column name="tags" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="message" type="bytea">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="snapshot" schemaName="public">
            <column name="persistence_id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="sequence_number" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="snapshot" type="bytea">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="read_side_offsets" schemaName="public">
            <column name="read_side_id" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="tag" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="sequence_offset" type="bigint"/>
            <column name="time_uuid_offset" type="char(36)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
